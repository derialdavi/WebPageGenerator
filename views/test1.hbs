<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>test</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="style.css" rel="stylesheet" />
    
</head>

<body id="page-top">
    
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <div class="container px-4">
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto">
                    {{#each data.sections}}
                    <li class="nav-item"><a class="nav-link" href="#{{this.titolo}}">{{this.titolo}}</a></li>

                    
                    {{/each}}
                </ul>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="bg-header bg-gradient text-white">
        <div class="container px-4 text-center">

            <h1 class="fw-bolder">{{data.header.Titolo}}</h1>
            <p class="lead">{{data.header.Sottotitolo}}</p>

        </div>
    </header>

    <div class="dets">
        
        {{#each data.sections}}
        <section id="{{this.titolo}}">
            <div class="container px-4">
                <div class="row gx-4 justify-content-center">
                    <div class="col-lg-8">

                        <h2>{{this.titolo}}</h2>

                        <p class="lead">
                            {{this.descrizione}}
                        </p>
                    </div>
                </div>
            </div>
        </section>
        {{/each}}
        
    </div>
    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container px-4">
            <p class="m-0 text-center text-white">Copyright &copy; Ficars 2k23</p>
        </div>
    </footer>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>